<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageEmptyCase">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutp5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="0dp"
            android:layout_height="287dp"
            android:background="@drawable/fondo_chico"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:layout_width="392dp"
                android:layout_height="288dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="85dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtInicioP6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/jua"
                        android:paddingLeft="20dp"
                        android:paddingTop="25dp"
                        android:text="@string/inicio"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imgUserP6"
                        android:layout_width="186dp"
                        android:layout_height="61dp"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:paddingLeft="160dp"
                        android:paddingTop="10dp"
                        app:srcCompat="@drawable/foto1" />
                </LinearLayout>

                <TextView
                    android:id="@+id/saludoP6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/jua"
                    android:paddingLeft="20dp"
                    android:text="@string/saludo"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/saldoTotalP6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/jua"
                    android:paddingLeft="20dp"
                    android:text="@string/saldo"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/saldoP6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/jua"
                        android:paddingLeft="20dp"
                        android:text="@string/Saldo_dinero"
                        android:textColor="@color/white"
                        android:textSize="40dp" />

                    <ImageView
                        android:id="@+id/notificacionP6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/bell_icon" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout4P5"
            android:layout_width="392dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
            app:layout_constraintVertical_bias="0.0">

            <Button
                android:id="@+id/btnEnviardineroP6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/send_icon"
                android:text="@string/enviar_dinero"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:theme="@style/Base.Theme.AlkeWalletJavaAndroid.btn"
                app:icon="@drawable/send_icon"

                app:iconTint="@color/black" />

            <Button
                android:id="@+id/btnRecibDinerP6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:text="@string/ingresar_dinero"
                app:icon="@drawable/send"
                app:iconPadding="-1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="389dp"
            android:layout_height="348dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4P5">

            <TextView
                android:id="@+id/transaccionesP6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/jua"
                android:text="@string/historial_trans"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"  />

            <ImageView
                android:id="@+id/imgSinTransP6"
                android:layout_width="match_parent"
                android:layout_height="119dp"
                app:srcCompat="@drawable/clipboard"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/textNoTransP6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jua"
                android:text="@string/sin_transacciones"
                android:textAlignment="center"
                android:textColor="@color/plomoClaro"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>